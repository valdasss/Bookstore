@model IEnumerable<BookStore.Web.Models.ViewModels.CustomerViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Klientai</h2>

<p>
    @Html.ActionLink("Sukurti naują klientą", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
      
    </tr>
}

</table>
